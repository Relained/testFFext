{
    "manifest_version": 2,
    "name": "YouTubeShortsZoom",
    "version": "1.0",
    "permissions": [
        "tabs",
        "activeTab",
        "https://www.youtube.com/*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["content.js"]
        }
    ]
}