{
    "manifest_version": 2,
    "name": "YouTube Shorts Zoom (Firefox)",
    "version": "1.0",
    "permissions": ["tabs", "activeTab", "<all_urls>"],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["content.js"]
        }
    ]
}